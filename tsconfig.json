{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "noEmit": false,
    "noEmitOnError": true,
    "noEmitHelpers": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "jsx": "react-native",
    "module": "ES2020",
    "lib": ["ES2020", "ESNext", "DOM"],
    "types": ["chrome", "firefox-webext-browser", "reflect-metadata", "jest"],
    "paths": {
      "@ambire-common/*": ["src/ambire-common/src/*"],
      "@contracts/*": ["src/ambire-common/contracts/*"],
      "@ambire-common-v1/*": ["src/ambire-common/v1/*"],
      "@common/*": ["src/common/*"],
      "@mobile/*": ["src/mobile/*"],
      "@web/*": ["src/web/*"],
      "@benzin/*": ["src/benzin/*"],
      "@legends/*": ["src/legends/*"],
      "@temp/*": ["src/temp/*"],
      "@erc7930/*": ["src/erc7930/*"]
    }
  },
  "exclude": [
    "node_modules",
    "ios",
    "android",
    "safari-extension",
    "build",
    "coverage",
    ".expo",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "index.js"
  ]
}
